<Window x:Class="IEEE488Terminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IEEE488Terminal" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button>Connect</Button>
            <TextBlock Margin="5">boardnum:</TextBlock>
            <TextBlock Margin="5">pad:</TextBlock>
            <TextBlock Margin="5">sad:</TextBlock>
            <TextBlock Margin="5">tmo:</TextBlock>
            <TextBlock Margin="5">eot:</TextBlock>
            <TextBlock Margin="5">eos:</TextBlock>
        </StackPanel>
    </Grid>
</Window>
