                                <DataTemplate DataType="dto:ChannelType">
                                    <ContentPresenter Content="{Binding Converter={StaticResource UnitsStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </TabItem>
        </controls:MetroTabControl>
    </Grid>
</UserControl>
