                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Grid.Row="2" Grid.Column="0">Едницы измерения для датчика в слоте 1:</TextBlock>
                        <ComboBox Grid.Row="2" Grid.Column="1"
                                  ItemsSource="{Binding Slot1.UnitSet, UpdateSourceTrigger=PropertyChanged}"
