<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:KipTM.Skins.Converters"
                    xmlns:converters="clr-namespace:KipTM.Skins.Converters">
    <converters:BinToTextResultConverter x:Key="BinToTextResultConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="IverseBooleanToVisibilityConverter"/>
    <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    <converters:BoolToColorConverterSelected x:Key="BoolToColorConverterSelected"/>

    <Style TargetType="TextBlock" x:Key="TblBasicStyle">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TblHeaderStyle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TbxBasicStyle">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="ComboBox" x:Key="CbBasicStyle">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
</ResourceDictionary>